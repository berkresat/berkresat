<HelpScreen>:
    ScreenManager:
        MDScreen:
            md_bg_color: 1, 1, 1, 1
            MDBoxLayout:
                orientation:'vertical'
                padding:0
                pos_hint: {"top": 1}
                MDTopAppBar:
                    id:helptoolbar
                    title: "About"
                    opposite_colors: True
                    anchor_title:'center'
                    elevation:0
                    specific_text_color:"black" 
                    md_bg_color: get_color_from_hex("#7A89EC")
                
                ScrollView:
                    bar_color:(117/255,117/255,117/255)
                    bar_width:3
                    MDList:
                        MDLabel:
                            id:helplabel
                            text:'Here is Help Documentation. Click help menu-bar and choose your topic.(right-top)' 
                            color: get_color_from_hex("#212121")
                            markup:True
                            size_hint_y:None
                            padding_x:'2dp'
                            height:self.texture_size[1] 
                            write:root.write()

                        MDBoxLayout:
                            oriantation:'horizontal'
                            adaptive_height:True
                            spacing:'20dp'
                            size_hint_x:0.7
                            
                            MDRoundFlatIconButton:
                                text:'Website'
                                icon:'web'
                                size_hint_x:0.7
                                text_color:'black'
                                icon_color:'blue'
                                line_color:'gray'
                                on_release:
                                    import webbrowser
                                    webbrowser.open('https://mathpathconsole.github.io/')
                            MDRoundFlatIconButton:
                                text:'Mail'
                                icon:'gmail'
                                size_hint_x:0.7
                                text_color:'black'
                                icon_color:'red'
                                line_color:'gray'
                                on_release:
                                    import webbrowser
                                    webbrowser.open('mailto:help.starsofthesky@gmail.com')
                            MDRoundFlatIconButton:
                                text:'Github'
                                icon:'github'
                                size_hint_x:0.7
                                text_color:'black'
                                icon_color:'black'
                                line_color:'gray'
                                on_release:
                                    import webbrowser
                                    webbrowser.open('https://github.com/mathpathconsole/mathpath')

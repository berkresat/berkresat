<HelpScreen>:
    ScreenManager:
        MDScreen:
            md_bg_color: 1, 1, 1, 1
            MDBoxLayout:
                orientation:'vertical'
                padding:0
                pos_hint: {"top": 1}
                MDTopAppBar:
                    id:helptoolbar
                    title: "About"
                    opposite_colors: True
                    anchor_title:'center'
                    elevation:0
                    specific_text_color:"black" 
                    md_bg_color: get_color_from_hex("#7A89EC")
                
                ScrollView:
                    bar_color:(117/255,117/255,117/255)
                    bar_width:3
                    MDList:
                        MDLabel:
                            id:helplabel
                            text:'Here is Help Documentation. Click help menu-bar and choose your topic.(right-top)' 
                            color: get_color_from_hex("#212121")
                            markup:True
                            size_hint_y:None
                            padding_x:'2dp'
                            height:self.texture_size[1] 